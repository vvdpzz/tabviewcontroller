<!DOCTYPE html>
<html>
<head>
  <title>Tableviewcontroller</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="questions">
  </div>
  <div id="answers">
  </div>
<script id="template" type="text/x-handlebars-template">
  {{#questions}}
    <h2>{{title}}</h2>
    <div class="content">{{content}}</div>
  {{/questions}}
</script>
<script id="answer-template" type="text/x-handlebars-template">
  {{#questions}}
    <h2>{{title}}</h2>
  {{/questions}}
</script>
<script type="text/javascript" charset="utf-8">
  $("#questions").tableViewController({dataSource: "/questions.json", template: "#template"});
  $("#answers").tableViewController({dataSource: "/questions.json", template: "#answer-template"});
</script>
</body>
</html>
